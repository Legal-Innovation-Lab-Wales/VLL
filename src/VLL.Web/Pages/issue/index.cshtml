@page "{issueId:int}"
@model IssueModel

@*@section Styles {
    <link href="/css/style-login.css" rel="stylesheet" type="text/css" />
}*@

<div class="container-tool">
	<h2>@Model.IssueAllTablesViewModel.Name</h2>

    @if (Model.CanSeeEditButton)
    {
        <p><a href="/issue/edit?issueId=@Model.IssueAllTablesViewModel.IssueId" class="btn btn-blue">Edit</a></p>
    }

	@*<p>Project Logo / Images?</p>*@
	@*<img src="https://davemateer.com/assets/2022-05-19/1.jpg" width="200" />*@
	@*<img src="https://davemateer.com/assets/2021-10-22/email-cover.jpg" width="400" />*@

	@*<p>projectId: @Model.ProjectFullViewModel.ProjectId</p>*@

	<p>Project: <a href="/project/@Model.IssueAllTablesViewModel.ProjectId">@Model.IssueAllTablesViewModel.ProjectName</a></p>

	<p>Date Created: @Model.IssueAllTablesViewModel.DateTimeCreatedUtc.UtcToGmt().ToString("dd/MM/yyyy")</p>

	<p>Is Public: @Model.IssueAllTablesViewModel.IsPublic</p>
	@*<p>Promoter: <a href="">@Model.ProjectAllTablesViewModel.PromoterEmail</a></p>*@

	@*<p>Short Description: @Model.ProjectAllTablesViewModel.ShortDescription</p>*@

	<p>Keywords: @Model.IssueAllTablesViewModel.Keywords</p>
    <br />

	@*<p>Description: @Model.ProjectAllTablesViewModel.Description</p>*@
	<p>Description: @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.IssueAllTablesViewModel.Description))</p>

    <br />
	<p>Regulator: @Model.IssueAllTablesViewModel.RegulatorName</p>

    <p>Regulator Response:</p>
    <p>@Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.IssueAllTablesViewModel.Response)) </p>

	@*<p>Notes: @Model.ProjectAllTablesViewModel.ResearchNotes</p>*@
</div>
